<section>
	<div class="card-group">
		{% assign recentposts = collections.posts | reverse %}
		{% for post in recentposts | reverse limit:2 %}
			<div{% if post.url == url %} data-current="current item"{% endif %} class="card">

				<div class="card-body">
									<h2 class="card-title">
						<a href="{{ post.url | url }}">
							{% if post.data.title %}
								{{ post.data.title }}
							{% else %}
								Untitled
							{% endif %}
						</a>
					</h2>
					<p>
						<time datetime="{{ post.date | machineDate }}">
							<small>{{ post.date | readableDate }} by {{ metadata.author.name }}</small>
						</time>
					</p>
					{% if post.data.tags %}
						<p>
							{% for tag in post.data.tags %}
								{%- if tag != "post" -%}
									{% set tagUrl %}/tags/{{ tag }}/{% endset %}
								<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
								{%- endif -%}
							{% endfor %}
						</p>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
</section>
